extends ../layouts/main-layout.pug
block content  

    form.text-center.border.border-light.p-5(action="/register" method="POST")
      input(type="hidden" name="_csrf" value=`${csrfToken}`)
      p.h4.mb-4 Kayıt Ol
      input#name.form-control.mb-4(type="text" name="name" placeholder="Adınız")
      input#surname.form-control.mb-4(type="text" name="surname" placeholder="Soyadınız")
      input#defaultLoginFormEmail.form-control.mb-4(type="email" name="email" placeholder="E-Posta")
      input#defaultLoginFormPassword.form-control.mb-4(type="password" name="password" placeholder="Şifre")
      button.btn.btn-outline-primary.btn-sm(type="submit") Kayıt Ol